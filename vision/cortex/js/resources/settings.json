{
    "defaults": {
        "audio": {
            "bitrate": 96000,
            "channels": 2
        },
        "db": ".dbs",
        "hls": {
            "duration": 1,
            "maxFiles": 12600
        },
        "localLogDir": "logs",
        "outputDir": "/Users/jg/Desktop/Cortex",
        "pm2": {
            "autorestart": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss.SSSS",
            "log_type": "json",
            "minUpdate": 500,       // ms
            "restartDelay": 500     // ms
        },
        "verbose": false,
        "video": {
            "bitrate": 96000,
            "height": 720,
            "width": 1280
        }
    },
    "handlers": {
        "h264.mjs": {},
        "http-live-stream.mjs": {
            "audio": {
                "bitrate": 96000,
                "encoder": "avenc_aac",
                "source": "pulsesrc"
            },
            "video": {
                "framerate": 30,
                "height": 720,
                "parser": "h264parse",
                "source": "rtspsrc",
                "width": 1080
            },
            "duration": 1,
            "max_files": 9000,
            "muxer": "mpegtsmux",
            "sink": "hlssink"
        },
        "m4a.mjs": {}
    }
}